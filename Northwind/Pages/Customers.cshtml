@page //Defines this file as a Razor page that can handle GTTP requests directly
@model CustomersModel // Specifies the model type - provides data and functionality for t
@{
    //This is a C# code block where server-side code can be executed
    ViewData["Title"] = "Northwind Customers";
    //Sets the page title in the view data directory
}

<!-- Outputs the value as header 1 level header --> 
<h1>@ViewData["Title"]</h1>

    <table class="table">
     <thead>
        <tr>
            <th>Customer ID</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Country</th>
        </tr>
     </thead>
     <tbody>
        <!-- Loops through the result set of customers and adds the information
        for each customer to the table-->
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.CompanyName</td>
                <td>@customer.ContactName</td>
                <td>@customer.Country</td>
            </tr>
        }
     </tbody>
    </table>